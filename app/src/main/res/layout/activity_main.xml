        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="longitude country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emojiCountryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="emoji country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameBankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/urlBankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="url_bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/phoneBankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/cityBankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="city bank"
        app:layout_constraintBottom_toBottomOf="parent"
